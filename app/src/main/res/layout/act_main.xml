<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt_simple_use"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="简单使用"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/bt_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="分割线"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/bt_pre_load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="数据预加载"
        android:textAllCaps="false" />


    <Button
        android:id="@+id/bt_item_drag_and_remove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Item拖拽与移除"
        android:textAllCaps="false" />


    <Button
        android:id="@+id/bt_motion_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="MotionEvent 多点触控"
        android:textAllCaps="false" />


    <Button
        android:id="@+id/bt_grade_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="分级Item"
        android:textAllCaps="false" />

</LinearLayout>